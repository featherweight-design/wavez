{
  "name": "wavez-graphql",
  "version": "1.0.0",
  "description": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/featherweight-design/wavez.git"
  },
  "bugs": {
    "url": "https://github.com/featherweight-design/wavez/labels/%F0%9F%90%9B%20%20Bug"
  },
  "author": "Featherweight Design",
  "license": "MIT",
  "private": true,
  "scripts": {
    "client": "cd client && yarn start",
    "server": "ts-node-dev --respawn -r tsconfig-paths/register src/index.ts",
    "start": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "postinstall": "cd client && yarn install",
    "build-client": "cd client && yarn build",
    "bundle": "cpx 'src/**/*' functions/bundle",
    "clean": "rm -rf node_modules yarn.lock && yarn install",
    "format": "prettier --write \"src/**/*.ts?(x)\"",
    "lint-all": "yarn lint-server && yarn lint-client",
    "lint-all-ci": "yarn lint-server-ci && yarn lint-client-ci",
    "lint-client": "cd client && yarn lint",
    "lint-client-ci": "cd client && yarn lint-ci",
    "lint-server": "eslint './src/**/*.{js,ts}' --fix",
    "lint-server-ci": "eslint './src/**/*.{js,ts}'",
    "test-client": "cd client && yarn test",
    "test-client-ci": "cd client && yarn test-ci",
    "generate": "npx prisma generate",
    "migrate-deploy": "npx prisma migrate deploy",
    "migrate-dev": "npx prisma migrate dev",
    "migrate-reset": "npx prisma migrate reset",
    "seed": "npx prisma db seed",
    "studio": "npx prisma studio"
  },
  "jest": {
    "collectCoverageFrom": [
      "./client/src/**/{components,pages,utilities}/**/*.ts?(x)"
    ],
    "testMatch": [
      "./**/__tests__/*.test.ts?(x)"
    ]
  },
  "dependencies": {
    "@prisma/client": "^2.29.1",
    "@sendgrid/mail": "^7.4.6",
    "@types/graphql-fields": "^1.3.3",
    "apollo-server": "^2.25.2",
    "apollo-server-lambda": "^3.3.0",
    "class-validator": "^0.13.1",
    "dayjs": "^1.10.6",
    "dotenv": "^10.0.0",
    "graphql-fields": "^2.0.3",
    "graphql-scalars": "^1.10.0",
    "jsonwebtoken": "^8.5.1",
    "local-devices": "^3.1.0",
    "netlify-lambda": "^2.0.14",
    "node-fetch": "^2.6.1",
    "reflect-metadata": "^0.1.13",
    "ts-node-dev": "^1.1.8",
    "type-graphql": "^1.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/node": "^16.0.0",
    "@types/node-fetch": "^2.5.10",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "cpx": "^1.5.0",
    "eslint": "^7.16.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.6",
    "prettier": "^2.3.2",
    "prisma": "^2.26.0",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.3.5"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "yarn lint-all"
    }
  }
}
